<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.cesar.appfinal.probando"
    android:weightSum="1"
    android:background="@drawable/movie_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.google.android.youtube.player.YouTubePlayerView>


        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/youtube_player"
            android:layout_weight="0.22"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/descri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titulo"
            android:text="" />

        <ImageView
            android:id="@+id/imagenyoutube"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/descri"
            app:srcCompat="@android:drawable/btn_dialog" />

    </LinearLayout>
</ScrollView>