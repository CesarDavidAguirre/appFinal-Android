<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView

        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:id="@+id/icono"
        android:src="@drawable/new_icon"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/titular"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/titular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_toEndOf="@+id/icono"/>

    <TextView
        android:id="@+id/pie_descrip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:textSize="10dp"
        android:layout_below="@+id/icono"
         />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pie_descrip"
        app:srcCompat="@drawable/separador" />


</RelativeLayout>