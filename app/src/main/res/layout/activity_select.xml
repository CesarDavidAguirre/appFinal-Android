<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="6dp"
    tools:context="com.example.cesar.appfinal.select"
    android:background="@android:color/darker_gray">

    <Button
        android:id="@+id/boton_youtube"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/ico_youtube"
        android:onClick="reproduEnYoutube"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="228dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/boton_servidor"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/icon_server"
        android:onClick="reproducirEnServidor"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="180dp"
        android:layout_marginEnd="42dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/taz_pensando"
        android:layout_below="@+id/boton_youtube"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
